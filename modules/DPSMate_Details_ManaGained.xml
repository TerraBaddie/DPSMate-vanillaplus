<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ../../FrameXML/UI.xsd">

	<Button name="DPSMate_Details_ManaGained_ScrollButtonTemplate" virtual="true">
		<Size x="220" y="24"/>
		<Layers>
			<Layer level="ARTWORK">
				<Texture name="$parent_Icon">
					<Size x="24" y="24"/>
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
				<FontString name="$parent_Name" inherits="GameFontNormalSmall" justifyH="LEFT">
					<Size x="110" y="24"/>
					<Anchors>
						<Anchor point="LEFT" relativeTo="$parent_Icon" relativePoint="RIGHT">
							<Offset x="5" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parent_Value" inherits="GameFontNormalSmall" justifyH="RIGHT">
					<Size x="80" y="24"/>
					<Anchors>
						<Anchor point="RIGHT">
							<Offset x="-5" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Button>

	<Frame name="DPSMate_Details_ManaGained" parent="UIParent" movable="true" hidden="true" enableMouse="true">
		<Size x="582" y="388"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets left="6" right="6" top="6" bottom="6"/>
			<TileSize val="16"/>
			<EdgeSize val="16"/>
			<Color r="0.157" g="0.08" b="0.06" a="1"/>
		</Backdrop>

		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_Title" inherits="GameFontNormalHuge" justifyH="LEFT" justifyV="CENTER" text="Mana Gained for Player">
					<Size x="900" y="40"/>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="10" y="0"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Scripts>
			<OnLoad>
				this:SetClampedToScreen()
				getglobal(this:GetName().."_Title"):SetFont("Fonts\\FRIZQT__.TTF", 14)
			</OnLoad>
			<OnMouseDown>
				this:StartMoving()
			</OnMouseDown>
			<OnMouseUp>
				this:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>

		<Frames>
			<!-- Close Button -->
			<Button name="$parent_CloseButton">
				<Size x="19" y="19"/>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
						<Offset x="-2" y="-2"/>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						DPSMate_Details_ManaGained:Hide()
						PlaySound("igMainMenuOptionCheckBoxOff")
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up"/>
				<PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
			</Button>

			<!-- Mana Gain Log -->
			<Frame name="$parent_Log">
				<Size x="225" y="220"/>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="180" y="-165"/>
					</Anchor>
				</Anchors>
				<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<BackgroundInsets left="6" right="6" top="6" bottom="6"/>
					<TileSize val="10"/>
					<EdgeSize val="10"/>
					<Color r="0.157" g="0.08" b="0.06" a="0.5"/>
				</Backdrop>
				<Frames>
					<ScrollFrame name="$parent_ScrollFrame" inherits="FauxScrollFrameTemplate">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="0" y="-5"/>
							</Anchor>
							<Anchor point="BOTTOMRIGHT">
								<Offset x="-27" y="4"/>
							</Anchor>
						</Anchors>
						<Scripts>
							<OnVerticalScroll>
								FauxScrollFrame_OnVerticalScroll(24, DPSMate.Modules.DetailsManaGained.ScrollFrame_Update)
							</OnVerticalScroll>
						</Scripts>
					</ScrollFrame>

					<!-- 10 log rows -->
					<Button name="$parent_ScrollButton1" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="1">
						<Anchors>
							<Anchor point="TOPLEFT">
								<Offset x="5" y="-5"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton2" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="2">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton1" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton3" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="3">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton2" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton4" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="4">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton3" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton5" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="5">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton4" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton6" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="6">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton5" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton7" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="7">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton6" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton8" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="8">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton7" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton9" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="9">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton8" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
					<Button name="$parent_ScrollButton10" inherits="DPSMate_Details_ManaGained_ScrollButtonTemplate" id="10">
						<Anchors>
							<Anchor point="TOP" relativeTo="$parent_ScrollButton9" relativePoint="BOTTOM">
								<Offset x="0" y="-2"/>
							</Anchor>
						</Anchors>
					</Button>
				</Frames>
			</Frame>
		</Frames>
	</Frame>

	<!-- VERY SIMPLE compare windows just to host gComp / graph, optional to flesh out later -->
	<Frame name="DPSMate_Details_CompareManaGained_Graph" parent="DPSMate_Details_ManaGained" hidden="true">
		<Size x="400" y="250"/>
		<Anchors>
			<Anchor point="TOP" relativeTo="$parent" relativePoint="BOTTOM">
				<Offset x="0" y="-10"/>
			</Anchor>
		</Anchors>
	</Frame>

	<Frame name="DPSMate_Details_CompareManaGained" parent="DPSMate_Details_ManaGained" hidden="true" movable="true">
		<Size x="400" y="300"/>
		<Anchors>
			<Anchor point="RIGHT" relativeTo="$parent" relativePoint="LEFT"/>
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets left="6" right="6" top="6" bottom="6"/>
			<TileSize val="16"/>
			<EdgeSize val="16"/>
			<Color r="0.157" g="0.08" b="0.06" a="1"/>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parent_Title" inherits="GameFontNormalHuge" justifyH="LEFT" justifyV="CENTER" text="Compare Mana Gained">
					<Size x="380" y="40"/>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset x="10" y="-10"/>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="$parent_Diagram">
				<Size x="245" y="215"/>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="15" y="-65"/>
					</Anchor>
				</Anchors>
				<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<BackgroundInsets left="6" right="6" top="6" bottom="6"/>
					<TileSize val="16"/>
					<EdgeSize val="16"/>
					<Color r="0.157" g="0.08" b="0.06" a="0.5"/>
				</Backdrop>
			</Frame>
		</Frames>
	</Frame>

</Ui>
